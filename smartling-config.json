{
    "locales": [
        {
            "smartling" : "fr-FR",
            "application" : "fr-FR"
        },
        {
            "smartling" : "de-DE",
            "application" : "de-DE"
        }
    ],
    "resourceSets": [
        {
            "type": "json",
            "pathRegex" : ".+\\en.json",
            "translationPathExpression" : "translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}"
        },
        {
            "type": "xml",
            "pathRegex": "source\\/.*_en\\.xml",
            "translationPathExpression" : "translated/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}"
        }
    ]
}
