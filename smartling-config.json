{
    "locales": [
        {
            "smartling": "it-IT",
            "application": "it-it"
        }
     ],
     "resourceSets": [
         {
             "type"                      : "json",
             "authorizeContent"          : "false",
             "pathRegex"                 : "i18n\\/en\\.json",
             "translationPathExpression" : "i18n/${locale}.${originalFile.extension}",
             "translationCommitMessage"  : "Smartling task translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}"	
         }
    ]
}

